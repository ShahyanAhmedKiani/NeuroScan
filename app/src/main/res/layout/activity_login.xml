<?xml version="1.0" encoding="utf-8"?>

<!--
NeuroScan Ultra-Modern Login Layout
To use this:
1. Place this in res/layout/activity_login.xml
2. Add 'com.google.android.material:material:1.9.0' (or higher) to build.gradle
3. Create 'soft_white_glow.xml' and 'circle_glass_bg.xml' in res/drawable
-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050A18">

    <!-- Premium Radial Glow Background Effect -->
    <View
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:background="@drawable/soft_white_glow"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-200dp"
        android:layout_marginEnd="-200dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp">

            <!-- Minimalist Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_glass_bg"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_revert"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#FFFFFF"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <!-- Elegant Header -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="48dp"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvAppBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEUROSCAN"
                android:textColor="#6366F1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.4"
                app:layout_constraintTop_toBottomOf="@id/tvWelcome"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- ULTRA-MODERN INPUT CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/loginCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1AFFFFFF"
                android:backgroundTint="#0DFFFFFF"
                app:layout_constraintTop_toBottomOf="@id/tvAppBrand">

                <LinearLayout
                    android:id="@+id/formContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <!-- Modern Pill Input: Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email Address"
                        android:textColorHint="#64748B"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="1dp"
                        app:boxStrokeColor="#6366F1"
                        app:boxBackgroundColor="#1AFFFFFF"
                        app:boxCornerRadiusBottomEnd="28dp"
                        app:boxCornerRadiusBottomStart="28dp"
                        app:boxCornerRadiusTopEnd="28dp"
                        app:boxCornerRadiusTopStart="28dp"
                        app:startIconDrawable="@android:drawable/ic_dialog_email"
                        app:startIconTint="#6366F1"
                        app:hintTextColor="#6366F1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:paddingStart="48dp"
                            android:paddingVertical="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Modern Pill Input: Password -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPassword"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Security Password"
                        android:textColorHint="#64748B"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="1dp"
                        app:boxStrokeColor="#6366F1"
                        app:boxBackgroundColor="#1AFFFFFF"
                        app:boxCornerRadiusBottomEnd="28dp"
                        app:boxCornerRadiusBottomStart="28dp"
                        app:boxCornerRadiusTopEnd="28dp"
                        app:boxCornerRadiusTopStart="28dp"
                        app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                        app:startIconTint="#6366F1"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#64748B"
                        app:hintTextColor="#6366F1">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp"
                            android:paddingStart="48dp"
                            android:paddingVertical="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Primary High-Tech Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="32dp"
                        android:text="Sign In"
                        android:textAllCaps="true"
                        android:letterSpacing="0.2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:cornerRadius="32dp"
                        android:backgroundTint="#6366F1"
                        android:textColor="#FFFFFF"
                        app:rippleColor="#818CF8"
                        app:elevation="12dp" />

                    <!-- Toggle Mode Link -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Don't have an account? "
                            android:textColor="#94A3B8"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvToggleMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Create new one"
                            android:textColor="#6366F1"
                            android:textSize="13sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Copyright Footer -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:alpha="0.5"
                android:text="Â© 2024 NEUROSCAN SYSTEMS INC."
                android:textColor="#94A3B8"
                android:textSize="10sp"
                android:letterSpacing="0.1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loginCard" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>